@{
    ViewBag.Title = "Pie Chart";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

@if (ViewBag.DestinationTitles != null && ViewBag.DestinationCapacities != null)
{
    <div class="d-flex justify-content-center align-items-center" style="padding-top: 100px; min-height: calc(100vh - 51.8px);">
        <div class="card" style="width: 80%; max-width: 800px;">
            <div class="card-header">
                <div class="card-title">Destinasyon Kapasiteleri Grafiği</div>
            </div>
            <div class="card-body">
                <div class="chart-container" style="position: relative; height: auto; width: 100%;">
                    <canvas id="pieChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script>
        var ctx = document.getElementById("pieChart").getContext("2d");
        var myPieChart = new Chart(ctx, {
            type: "pie",
            data: {
                labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.DestinationTitles)),
                datasets: [{
                    label: "Kapasiteler",
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.DestinationCapacities)),
                    backgroundColor: [
                        "#FF6384",
                        "#36A2EB",
                        "#FFCE56",
                        "#4BC0C0",
                        "#9966FF",
                        "#FF9F40"
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                legend: {
                    position: "top",
                },
                title: {
                    display: true,
                    text: "Destinasyon Kapasiteleri"
                },
                animation: {
                    animateScale: true,
                    animateRotate: true
                }
            }
        });
    </script>
}
else
{
    <p>Veri bulunamadı veya yüklenemedi.</p>
}
