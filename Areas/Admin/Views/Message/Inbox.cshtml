@model List<Project2WooxTravel.Entities.Message>

@{
    ViewBag.Title = "Inbox";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";

    int count = 0;
}

<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Gelen Mesajlar</div>
                    </div>
                    <div class="card-body">
                        <a href="/Admin/Message/SendMessage/" class="btn btn-primary">Yeni Mesaj Gönderin</a>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Gönderici</th>
                                    <th scope="col">Konu</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.SenderMail</td>
                                        <td>@item.Subject</td>
                                        <td>@item.SendDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        @if (@item.IsRead == true)
                                        {
                                            <td>Okundu</td>
                                        }
                                        else
                                        {
                                            <td>Okunmadı</td>
                                        }
                                        <td>
                                            <a href="#" class="btn btn-secondary">Mesajı Aç</a>
                                            <a href="#" class="btn btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>