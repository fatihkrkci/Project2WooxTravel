@model Project2WooxTravel.Entities.Admin

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WoOx Travel | Admin Girişi</title>
    <link rel="stylesheet" href="/Glassmorphism-Login-Form/style.css">
</head>
<body>
    <div class="wrapper">
        <form method="post">
            <h2>WoOx Travel Admin Girişi</h2>
            <div class="input-field">
                <input type="text" name="Username" required>
                <label>Kullanıcı Adınızı Yazınız...</label>
            </div>
            <div class="input-field">
                <input type="password" name="Password" required>
                <label>Şifrenizi Yazınız...</label>
            </div>
            <button type="submit">Giriş Yap</button>
        </form>
    </div>
</body>
</html>